

<h1 class="wottitle"> Wall of Tweets @ <a href="https://fly.io/"> Fly.io </a> </a></h1>
<rb>
<div class="walltweet">
  <%= render "form", tweet: @tweet %>
</div>

<br>
<% if notice %>
<br>
<div class="wotitem" id="notice">
  <% if notice[0] == "T" %>
    <span style="color: green;"><%= notice %></span>
  <% else %>
    <span style="color: red;"><%= notice %></span>
  <% end %>
</div>
<% end %>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <% @tweet_day = tweet.created_at.strftime("%A, %B %d, %Y") %>
      <% if @actual_day != @tweet_day %>
      <h3>
        ......
        <%= @actual_day = @tweet_day %>
      </h3>
    <% end %>
    <%= render tweet %>
  <% end %>
</div>
